@model List<Country>

<h1>Country</h1>
<hr />

<a asp-action="Create" class="btn btn-primary">Add new Country</a>
<br />

@if (Model.Any())
{
    <br />
    @* @if (TempData["MessageAddCountry"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Message!</strong>
            @TempData["MessageAddCountry"].
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

    }*@


    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>
                        @x.Id
                    </td>
                    <td>
                        @x.Name
                    </td>
                    <td>
                        <a class="btn btn-warning" href="~/Country/Update/@x.Id">Update</a>
                        &nbsp;
                        <a class="btn btn-danger" data-toggle="modal" data-target="#confirmationModal-@x.Id">Delete</a>

                        <div class="modal" id="confirmationModal-@x.Id" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Confirmation</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to delete this item?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <a href="~/Country/Delete/@x.Id" class="btn btn-danger">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
