@model CountryViewModel

<h1>Add a new Country</h1>
<hr />
<br />
<form asp-action="Create">

    <div class="col-md-6">

        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="Name" required class="form-control" id="Name" placeholder="Enter the Name Country">
        </div>
    </div>

    <br />

    <button type="submit" class="btn btn-primary" value="Save">Add new Country</button>
    <a class="btn btn-danger" asp-controller="Country" asp-action="Index">Back</a>


</form>
