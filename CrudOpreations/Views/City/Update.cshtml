@model UpdateCityViewModel
<form asp-action="Update" enctype="multipart/form-data">
    <div class="row">
        <input asp-for="Id" type="hidden"/>
        <div class="col-md-6">
            <label class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control"  placeholder="Enter the City">
            </div>
        </div>

        <div class="col-md-6">
            <label class="col-sm-2 col-form-label">Image</label>
            <div class="col-sm-10">
                <input type="file" asp-for="Image" required class="form-control"  placeholder="Enter the City">
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-md-6">
            <label class="col-sm-2 col-form-label"> </label>

            <select asp-for="CountryId" required class="form-select form-select-lg mb-3" asp-items="ViewBag.SendCountryId" aria-label=".form-select-sm example">
            </select>
        </div>


    </div>



    <button type="submit" class="btn btn-primary" value="Save">Update City</button>
    <a class="btn btn-danger" asp-controller="City" asp-action="Index">Back</a>



</form>