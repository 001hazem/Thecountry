@model List<Region>


<h1> Region</h1>
<hr />

<a asp-action="Create" class="btn btn-primary">Add new Region</a>
<br />

@if (Model.Any())
{
    <br />
    @* @if (TempData["sendNotification"] != null)

    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Message!</strong>
            @TempData["sendNotification"].
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

    }*@

    <table class="table table-hover">

        <thead>
            <tr>

                <td>
                    Name
                </td>
                <td>
                    Name City
                </td>
                <td>
                    Image
                </td>

                <td>
                    Actions
                </td>


            </tr>

        </thead>

        @foreach (var x in Model)
        {

            <tr>

                <td>
                    @x.Name
                </td>

                <td>
                    @x.Cities.Name
                </td>

                <td>
                    <img class="img-fluid" width="150" src="~/Images/@x.Image" />
                </td>

                <td>
                    <a class="btn btn-warning" href="~/Region/Update/@x.Id">Update</a>
                    &nbsp;
                    <a class="btn btn-danger" data-toggle="modal" data-target="#confirmationModal-@x.Id">Delete</a>

                    <div class="modal" id="confirmationModal-@x.Id" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Confirmation</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this item?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    <a href="~/Region/Delete/@x.Id" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </table>
}
else
{

    <br />
    <br />
    <h2 class="alert-warning">No data in the page</h2>
}