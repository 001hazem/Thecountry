@model List<UserViewModel>

<a asp-action="Create" class="btn btn-primary">Add new User</a>
<br />

@if (Model.Any())
{
    <br />

    <table class="table table-hover">

        <thead>
            <tr>

                <th scope="col">
                    UserName
                </th>
                <th scope="col">
                    Email
                </th>
                <th scope="col">
                    Phone Number
                </th>
                <th scope="col">
                    CreatedAt
                </th>

                <th scope="col">
                    Actions
                </th>


            </tr>

        </thead>

        @foreach (var x in Model)
        {
            <tbody>

            <tr>

                    <td scope="row">
                    @x.UserName
                </td>
                    <td scope="row">
                    @x.Email
                </td>
                    <td scope="row">
                    @x.PhoneNumber
                </td>
                    <td scope="row">
                    @x.CreatedAt.ToString("dd:mm:yyyyy")
                </td>


                    <td scope="row">
                    <a class="btn btn-warning" href="~/User/Update/@x.Id">Update</a>
                    &nbsp;
                    <a class="btn btn-danger" data-toggle="modal" data-target="#confirmationModal-@x.Id">Delete</a>

                    <div class="modal" id="confirmationModal-@x.Id" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Confirmation</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this item?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    <a href="~/User/Delete/@x.Id" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
            </tbody>
        }
    </table>
}
else
{

    <br />
    <br />
    <h2 class="alert-warning">No data in the page</h2>
}
